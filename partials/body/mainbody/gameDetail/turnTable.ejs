
    <table class="table table-hover table-responsive" >
        <thead>
            <tr>
                <th>Player</th>
                <th>Speed</th>
                <th>Sent</th>
                <th>Received</th>
                <th>IP Address</th>
                <th>Status</th>
                <th>Response</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody  ng-repeat="play in turn">
            <tr>
                <td>{{play.name}}</td>
                <td>{{play.speed.name}}</td>
                <td>{{play.sentTime | date:'yyyy-MM-dd HH:mm:ss' }}</td>
                <td>{{play.receivedTime | date:'yyyy-MM-dd HH:mm:ss' }}</td>
                <td>{{play.ipAddress}}</td>
                <td>{{play.status.status}}</td>
                <td><count-down-timer starttime="{{play.sentTime}}" receivedtime="{{play.receivedTime}}"></count-down-timer></td>
                <td><item-throw-button ng-if="(play.player.id==userid && play.status.id==103)" turnid="play.id"></item-throw-button></td>
            </tr>
        </tbody>
    </table>
